      "Bash(lsof:*)",
      "Bash(xattr:*)",
      "Bash(mdls:*)",
      "Bash(mdfind:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git cat-file:*)",
      "Bash(git rev-parse:*)",
      "Bash(git describe:*)",
      "Bash(git blame:*)",
      "Bash(git shortlog:*)",
